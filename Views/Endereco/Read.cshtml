@model List<CasaRepousoWeb.Models.Endereco>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Book, initial-scale=1.0">
    <title>Sistema</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="container">
    <h2>Endereços</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Endereço</li>
        </ol>
    </nav>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rua</th>
                <th>Numero</th>
                <th>Bairro</th>
                <th>CEP</th>
                <th>Complemento</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        @foreach(var endereco in Model) {
        <tr>
            <td>@endereco.EnderecoId</td>
            <td>@endereco.Rua</td>
            <td>@endereco.Numero</td>
            <td>@endereco.Bairro</td>
            <td>@endereco.CEP</td>
            <td>@endereco.Complemento</td>
            <td>
                <div class="btn-group" role="group">
                    <a href="/endereco/update/@endereco.EnderecoId" class="btn btn-sm btn-outline-success">
                        <i class="bi-pencil-square"></i> Editar
                    </a>
                    <a href="/endereco/delete/@endereco.EnderecoId" class="btn btn-sm btn-outline-danger">
                        <i class="bi-trash"></i> Deletar
                    </a>
                    
                </div>
            </td>
        </tr>
        }
    </table>
    <a class="btn btn-primary" href="/endereco/create">Adicionar <i class="bi bi-plus-lg"></i></a>
</body>
</html>