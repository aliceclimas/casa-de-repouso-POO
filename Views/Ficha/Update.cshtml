@model CasaRepousoWeb.Models.Ficha


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">
    
    <h2>Ficha médica</h2>

    

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/book/read">Ficha Média</a></li>
            <li class="breadcrumb-item active" aria-current="page">Atualize uma ficha</li>
        </ol>
    </nav>

    <form action="/ficha/update/@Model.FichaId" method="POST" class="col offset-md-2 col-8">
        <input placeholder="Saúde" name="Saude" class="form-control" value="@Model.Saude"/><br/>
        <input placeholder="Nutrição" name="Nutricao" class="form-control" value="@Model.Nutricao" /><br/>
        <input placeholder="Data de entrada" name="DataEntrada" class="form-control" value="@Model.DataEntrada" /><br/>
        <input placeholder="Data de saída" name="DataSaida" class="form-control" value="@Model.DataSaida" /><br/>
        <button class="btn btn-primary">Salvar</button>
        <a class="btn btn-outline-secondary" href="/pessoa/read">Voltar</a>
    </form>
</body>
</html>