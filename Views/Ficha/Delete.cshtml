@model CasaRepousoWeb.Models.Ficha

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">
    
    <h2>Você tem certeza que deseja excluir essa ficha?</h2>
    
    
    <form action="/ficha/confirmardelete/@Model.FichaId" method="POST" class="col offset-md-2 col-8">
        <div>
        <p>Saúde @Model.Saude</p>
        <p>Nutrição @Model.Nutricao</p>
        <p>Data de entrada @Model.DataEntrada</p>
        <p>Data de saída @Model.DataSaida</p>
        </div>
        <button class="btn btn-primary">Excluir</button>
        <a class="btn btn-outline-secondary" href="/ficha/read">Voltar</a>
    </form>

</body>
</html>
