@model CasaRepousoWeb.Models.Relatorio

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Relatório</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Criar Novo Relatório para @ViewBag.Idoso?.Nome</h2>
        <form asp-action="Create" method="post">
            <input type="hidden" name="IdosoId" value="@ViewBag.IdosoId" />
            <div class="form-group">
                <label for="Titulo">Título</label>
                <input type="text" class="form-control" id="Titulo" name="Titulo" required />
            </div>
            <div class="form-group">
                <label for="Descricao">Descrição</label>
                <textarea class="form-control" placeholder="Descrição" name="Descricao"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="/relatorio/read/@ViewBag.IdosoId" class="btn btn-secondary">Voltar</a>
        </form>
    </div>
</body>
</html>
