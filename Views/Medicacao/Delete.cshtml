@model CasaRepousoWeb.Models.Ficha

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">
    
    <h2>Você tem certeza que deseja excluir esse medicamento?</h2>
    
    
    <form action="/medicacao/confirmardelete/@Model.MedicacaoId" method="POST" class="col offset-md-2 col-8">
        <div>
        <p>Idoso @Model.IdosoId</p>
        <p>Nome do medicamento @Model.NomeMedicamento</p>
        <p>Descrição @Model.Descricao</p>
        </div>
        <button class="btn btn-primary">Excluir</button>
        <a class="btn btn-outline-secondary" href="/medicacao/read">Voltar</a>
    </form>

</body>
</html>