@model List<CasaRepousoWeb.Models.Ficha>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Book, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="container">
    <h2>Medicação</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Medicação</li>
        </ol>
    </nav>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Idoso</th>
                <th>Nome do medicamento</th>
                <th>Descrição</th>
        
            </tr>
        </thead>
        @foreach(var medicacao in Model) {
        <tr>
            <td>@ficha.IdosoId</td>
            <td>@ficha.NomeMedicamento</td>
            <td>@ficha.Descricao</td>
            <td>
                <div class="btn-group" role="group">
                    <a href="/medicacao/update/@ficha.MedicacaoId" class="btn btn-sm btn-outline-success">
                        <i class="bi-pencil-square"></i> Edit
                    </a>
                    <a href="/medicacao/delete/@ficha.MedicacaoId" class="btn btn-sm btn-outline-danger">
                        <i class="bi-trash"></i> Delete
                    </a>
                </div>
            </td>
        </tr>
        }
    </table>

    <a class="btn btn-primary" href="/medicacao/create">Adicionar medicamento</a>
    
</body>
</html>