@model CasaRepousoWeb.Models.Ficha


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">
    
    <h2>Medicação</h2>

    

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/book/read">Medicação</a></li>
            <li class="breadcrumb-item active" aria-current="page">Atualize uma medicação</li>
        </ol>
    </nav>

    <form action="/medicacao/update/@Model.MedicacaoId" method="POST" class="col offset-md-2 col-8">
        <input placeholder="Idoso" name="IdosoId" class="form-control" value="@Model.IdosoId"/><br/>
        <input placeholder="Nome do medicamento" name="NomeMedicamento" class="form-control" value="@Model.NomeMedicamento" /><br/>
        <input placeholder="Descrição" name="Descricao" class="form-control" value="@Model.Descricao" /><br/>
        <button class="btn btn-primary">Salvar</button>
        <a class="btn btn-outline-secondary" href="/medicacao/read">Voltar</a>
    </form>
</body>
</html>