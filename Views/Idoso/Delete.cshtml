@model CasaRepousoWeb.Models.Idoso

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Idoso</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">

    <h2>Você tem certeza que deseja remover esse idoso?</h2>


    <form action="/idoso/confirmardelete/@Model.IdosoId" method="POST" class="col offset-md-2 col-8">
        <div>
        <p>Nome @Model.Nome</p>
        <p>Data de Nascimento @Model.dataNascimento</p>
        <p>Problemas de Saúde @Model.ProblemasDeSaude</p>
        <p>Alimentação @Model.Nutricao</p>
        <p>Alergias @Model.Alergia</p>
        <p>Cuidados Especiais @Model.CuidadosEspeciais</p>
        </div>
        <button class="btn btn-primary">Excluir</button>
        <a class="btn btn-outline-secondary" href="/ficha/read">Voltar</a>
    </form>

</body>
</html>