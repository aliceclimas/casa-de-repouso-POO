@model List<CasaRepousoWeb.Models.Idoso>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Book, initial-scale=1.0">
    <title>Idoso</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="container">
    <h2>Idosos Cadastrados</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Idosos</li>
        </ol>
    </nav>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>Problemas de Saúde</th>
                <th>Alimentação</th>
                <th>Alergias</th>
                <th>Cuidados Especiais</th>

            </tr>
        </thead>
        @foreach(var idoso in Model) {
        <tr>
            <td>@idoso.Nome</td>
            <td>@idoso.dataNascimento</td>
            <td>@idoso.ProblemasDeSaude</td>
            <td>@idoso.Nutricao</td>
            <td>@idoso.Alergia</td>
            <td>@idoso.CuidadosEspeciais</td>
            <td>
                <div class="btn-group" role="group">
                    <a href="/idoso/update/@idoso.IdosoId" class="btn btn-sm btn-outline-success">
                        <i class="bi-pencil-square"></i> Editar
                    </a>
                    <a href="/idoso/delete/@idoso.IdosoId" class="btn btn-sm btn-outline-danger">
                        <i class="bi-trash"></i> Deletar
                    </a>
                </div>
            </td>
        </tr>
        }
    </table>

    <a class="btn btn-primary" href="/book/create">Adicionar Idoso</a>

</body>
</html>