@model CasaRepousoWeb.Models.Ala

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">
    <h2>Alas</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/ala/read">Ala</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edite uma ala</li>
        </ol>
    </nav>
    <form action="/ala/update/@Model.AlaId" method="POST" class="col offset-md-2 col-8">
        <input placeholder="Nome da ala" name="Nome" class="form-control" value="@Model.Nome"/><br/>
        <button class="btn btn-primary">Salvar</button>
        <a class="btn btn-outline-secondary" href="/ala/read">Voltar</a>
    </form>
</body>
</html>