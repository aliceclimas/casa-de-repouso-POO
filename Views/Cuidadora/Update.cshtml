@model CasaRepousoWeb.Models.Cuidadora


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cuidadora</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">

    <h2>Cuidadora</h2>



    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/book/read">Cuidadora</a></li>
            <li class="breadcrumb-item active" aria-current="page">Atualizar Cuidadora</li>
        </ol>
    </nav>

    <form action="/cuidadora/update/@Model.CuidadoraId" method="POST" class="col offset-md-2 col-8">
        <input placeholder="Nome" name="Nome" class="form-control" value="@Model.Nome"/><br/>
        <input placeholder="Telefone" name="Telefone" class="form-control" value="@Model.Telefone"/><br/>
        <input placeholder="Turno" name="Turno" class="form-control" value="@Model.Turno"/><br/>
        <input placeholder="Email" name="Email" class="form-control" value="@Model.Email"/><br/>
        <input placeholder="senha" name="senha" class="form-control" value="@Model.senha"/><br/>
        <button class="btn btn-primary">Salvar</button>
        <a class="btn btn-outline-secondary" href="/pessoa/read">Voltar</a>
    </form>
</body>
</html>