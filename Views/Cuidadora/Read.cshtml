@model CasaRepousoWeb.Models.Cuidadora

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil da Cuidadora</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f0f2f5;
        }
        .container {
            max-width: 600px;
            background: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }
        .profile-info {
            font-size: 1.1em;
            margin-bottom: 15px;
        }
        .profile-info strong {
            color: #555;
        }
        .btn-group {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }
        .btn-primary, .btn-secondary {
            min-width: 120px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Perfil da Cuidadora</h2>
        <div class="profile-info">
            <strong>Nome:</strong> @Model.Nome
        </div>
        <div class="profile-info">
            <strong>Sobrenome:</strong> @Model.Sobrenome
        </div>
        <div class="profile-info">
            <strong>CPF:</strong> @Model.CPF
        </div>
        <div class="profile-info">
            <strong>Telefone:</strong> @(string.IsNullOrWhiteSpace(Model.Telefone) ? "Não definido" : Model.Telefone)
        </div>
        <div class="profile-info">
            <strong>Horário de Entrada:</strong> @(Model.HorarioEntrada.HasValue ? Model.HorarioEntrada.Value.ToString(@"hh\:mm") : "Não definido")
        </div>
        <div class="profile-info">
            <strong>Horário de Saída:</strong> @(Model.HorarioSaida.HasValue ? Model.HorarioSaida.Value.ToString(@"hh\:mm") : "Não definido")
        </div>
        <div class="profile-info">
            <strong>Email:</strong> @Model.Email
        </div>
        <div class="profile-info">
            <strong>Ala:</strong> @(Model.Ala?.Nome ?? "Não atribuído")
        </div>

        <div class="btn-group">
            <a href="/Cuidadora/Update/@Model.CuidadoraId" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar Perfil
            </a>
            <a href="/Idoso/Read" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
