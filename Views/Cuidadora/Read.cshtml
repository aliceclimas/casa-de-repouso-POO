@model List<CasaRepousoWeb.Models.Cuidadora>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Book, initial-scale=1.0">
    <title>Cuidadora</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="container">
    <h2>Cuidadoras Cadastradas</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Cuidadoras</li>
        </ol>
    </nav>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Turno</th>
                <th>Email</th>
                <th>Senha</th>
            </tr>
        </thead>
        @foreach(var cuidadora in Model) {
        <tr>
            <td>@cuidadora.Nome</td>
            <td>@cuidadora.Telefone</td>
            <td>@cuidadora.Turno</td>
            <td>@cuidadora.Email</td>
            <td>@cuidadora.senha</td>
            <td>
                <div class="btn-group" role="group">
                    <a href="/cuidadora/update/@cuidadora.CuidadoraId" class="btn btn-sm btn-outline-success">
                        <i class="bi-pencil-square"></i> Editar
                    </a>
                    <a href="/cuidadora/delete/@cuidadora.CuidadoraId" class="btn btn-sm btn-outline-danger">
                        <i class="bi-trash"></i> Deletar
                    </a>
                </div>
            </td>
        </tr>
        }
    </table>

    <a class="btn btn-primary" href="/book/create">Adicionar Cuidadora</a>

</body>
</html>