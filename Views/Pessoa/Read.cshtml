@model List<CasaRepousoWeb.Models.Pessoa>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=Book, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="container">
    <h2>Lista de pessoas</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Pessoas</li>
        </ol>
    </nav>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>CPF</th>

            </tr>
        </thead>
        @foreach(var pessoa in Model) {
        <tr>
            <td>@pessoa.Nome</td>
            <td>@pessoa.Sobrenome</td>
            <td>@pessoa.CPF</td>
            <td>
                <div class="btn-group" role="group">
                    <a href="/pessoa/update/@pessoa.PessoaId" class="btn btn-sm btn-outline-success">
                        <i class="bi-pencil-square"></i> Edit
                    </a>
                    <a href="/pessoa/delete/@pessoa.PessoaId" class="btn btn-sm btn-outline-danger">
                        <i class="bi-trash"></i> Delete
                    </a>
                </div>
            </td>
        </tr>
        }
    </table>

    <a class="btn btn-primary" href="/pessoa/create">Adicionar pessoa</a>
    
</body>
</html>