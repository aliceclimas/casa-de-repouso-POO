@model CasaRepousoWeb.Models.Pessoa


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="container">
    
    <h2>Books</h2>

    

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/book/read">Pessoas</a></li>
            <li class="breadcrumb-item active" aria-current="page">Atualize uma pessoa</li>
        </ol>
    </nav>

    <form action="/pessoa/update/@Model.PessoaId" method="POST" class="col offset-md-2 col-8">
        <input placeholder="Nome" name="Nome" class="form-control" value="@Model.Nome"/><br/>
        <input placeholder="Sobrenome" name="Sobrenome" class="form-control" value="@Model.Sobrenome" /><br/>
        <input placeholder="CPF" name="CPF" class="form-control" value="@Model.CPF" /><br/>
        <button class="btn btn-primary">Salvar</button>
        <a class="btn btn-outline-secondary" href="/pessoa/read">Voltar</a>
    </form>
</body>
</html>