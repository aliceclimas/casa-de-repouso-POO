@model CasaRepousoWeb.Models.Situacao

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Situação</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Editar Situação</h2>
        <form action="/situacao/Update/@Model.SituacaoId" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" placeholder="Nome" name="Nome" value="@Model.Nome" required>
            </div>
            <div class="form-group">
                <label for="descricao">Descrição</label>
                <textarea class="form-control" placeholder="Descrição" name="Descricao" required>@Model.Descricao</textarea>
            </div>
            <div class="form-group">
                <label for="cor">Cor</label>
                <select class="form-control" name="Cor" required>
                    <option value="green" @(Model.Cor == "green" ? "selected" : "")>Verde</option>
                    <option value="red" @(Model.Cor == "red" ? "selected" : "")>Vermelho</option>
                    <option value="blue" @(Model.Cor == "blue" ? "selected" : "")>Azul</option>
                    <option value="yellow" @(Model.Cor == "yellow" ? "selected" : "")>Amarelo</option>
                    <option value="orange" @(Model.Cor == "orange" ? "selected" : "")>Laranja</option>
                    <option value="purple" @(Model.Cor == "purple" ? "selected" : "")>Roxo</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success">Salvar</button>
            <a href="/situacao/read" class="btn btn-secondary">Voltar</a>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
